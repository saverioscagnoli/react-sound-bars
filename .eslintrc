{
  "extends": ["airbnb", "prettier"],
  "plugins": ["react"],
  "rules": {
    "react/prop-types": false,
    "no-underscore-dangle": 0,
    "import/imports-first": ["error", "absolute-first"],
    "import/newline-after-import": "error"
  },
  "globals": {
    "document": 1,
    "window": 1,
    "storybook": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  }
}
